{% extends 'admin/base.html.twig' %}

{% block title %}Cliente: {{ user.nombre }}{% endblock %}

{% block body %}
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="col-12 col-md-11 col-lg-10 col-xl-9">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
            <h1>Cliente: {{ user.nombre }}</h1>

            <table class="table text-white">
                <tbody>
                    <tr>
                        <th >Id</th>
                        <td colspan="3">{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td colspan="3">{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Tipo de cuenta</th>
                        <td colspan="3">
                        {% if user.roles|length == 1 %}
                            Cliente
                        {% else %}
                            Administrador
                        {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td colspan="3">{{ user.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Apellidos</th>
                        <td colspan="3">{{ user.apellidos }}</td>
                    </tr>
                    <tr>
                        <th>Dni</th>
                        <td colspan="3">{{ user.dni }}</td>
                    </tr>
                    <tr>
                        <th>Direccion</th>
                        <td colspan="3">{{ user.direccion }}</td>
                    </tr>
                    <tr>
                        <th>Acciones</th>
                        <td><a class="btn btn-outline-danger" href="{{ path('app_admin_user_index') }}">Volver</a></td>
                        <td><a class="btn btn-outline-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a></td>
                        <td text-center>{{ include('admin/user/_delete_form.html.twig') }}</td>
                    </tr>
                </tbody>
            </table>

            

            

            
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
