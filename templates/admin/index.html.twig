{% extends 'admin/base.html.twig' %}

{% block title %}Administración GranaWeb{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom dashboard_space">
        <h1 class="h2">Administración GranaWeb </h1>
        <h3>Bienvenido a la pagina de administracion de GranaWeb</h3>
      </div>

      <h2>Ultimos pedidos</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Fecha</th>
              <th scope="col">Estado</th>
              <th scope="col">Productos</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
           {% for pedido in pedidos %}
             <tr>
              <td>{{ pedido.id}}</td>
              <td>{{ pedido.fecha.format('d-m-Y h:m') }}</td>
              <td>{{ pedido.estado}}</td>
              <td>
                  <select class="form-select"  name="" id="">
                  <option>Productos comprados:</option>
                  {% for detalles in pedido.detallepedidos %}
                      {% for producto in detalles.producto %}
                          <option>{{ producto.nombre}}</option>
                      {% endfor %}
                  {% endfor %}
                  </select>
              </td>
              <td>
                    <a class="btn btn-outline-info" href="{{ path('app_pedido_show', {'id': pedido.id}) }}">Ver</a>
                </td>
            </tr>
           {% else %}
             
           {% endfor %}



            
            
          </tbody>
        </table>
      </div>

{% endblock %}
