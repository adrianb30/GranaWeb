{% extends 'admin/base.html.twig' %}

{% block title %}Listado de Clientes{% endblock %}

{% block body %}
    <h1>Lista de Clientes</h1>
    <a class="btn btn-outline-primary mb-3" href="{{ path('app_user_new') }}">AÃ±adir Cliente Manual</a>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.apellidos }}</td>
                <td>{{ user.direccion }}</td>
                <td>
                    <a class="btn btn-outline-info" style="width:60px;" href="{{ path('app_user_show', {'id': user.id}) }}">Ver</a>
                    <a class="btn btn-outline-success" style="width:60px;" href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No se han encontrado Clientes</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
