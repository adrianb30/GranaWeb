{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}

<div class="container mt-5 mb-5" style="margin-bottom:150px !Important;">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center">
                    <div class="main_image">
                        <img src="{{ asset('uploads/img/' ~ producto.imagen) }}" id="main_product_image" width="350">
                    </div>	
                    
                </div>
            </div>	
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>{{ producto.nombre}}</h3>	
                        <span class="heart">
                            <i class='bx bx-heart'></i>
                        </span>
                    </div>
                    <div class="mt-2 pr-3 content">	
                        <p>{{ producto.descripcion}}</p>	
                    </div>
                    <h3>{{ producto.precio}} €</h3>
                    <div class="ratings d-flex flex-row align-items-center">
                        <div class="d-flex flex-row">
                            <i class='bx bxs-star'></i>	
                            <i class='bx bxs-star'></i>	
                            <i class='bx bxs-star'></i>
                            <i class='bx bxs-star'></i>
                            <i class='bx bx-star'></i>
                        </div>
                        <span class="text-success"><strong>{{ producto.stock}} Stock</strong> </span>
                    </div>	
                    <div class="buttons d-flex flex-row mt-5 gap-3">
                        {% if app.user %}
                            <form method="POST">
                                <input type="hidden" name="producto" value="{{ producto.id }}">
                                <button class="btn btn-dark" name="btn_carrito">Añadir al carrito</button>
                            </form>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline-secondary col-12" name="iniciar_sesion">Para comprar necesita iniciar sesión</a>
                        {% endif %}
                        
                    </div>	
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
