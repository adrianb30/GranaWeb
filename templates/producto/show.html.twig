{% extends 'admin/base.html.twig' %}

{% block title %}{{ producto.nombre }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Producto: {{ producto.nombre }}</h1>
        
        <hr>
        
        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ producto.id }}</td>
                </tr>
                <tr>
                    <th>Imagen</th>
                    <td colspan="3"><img src="{{ asset('uploads/img/' ~ producto.imagen) }}"></td>
                </tr>
                <tr>
                    <th>Descripci√≥n</th>
                    <td colspan="3">{{ producto.descripcion }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td colspan="3">{{ producto.stock }}</td>
                </tr>
                <tr>
                    <th>Precio</th>
                    <td colspan="3">{{ producto.precio }}</td>
                </tr>
                <tr>
                    <th>Acciones</th>
                    <td><a class="btn btn-outline-secondary" href="{{ path('app_admin_producto_index') }}">Volver</a></td>
                    <td><a class="btn btn-outline-warning ml-5" href="{{ path('app_admin_producto_edit', {'id': producto.id}) }}">Editar</a></td>
                    <td>{{ include('producto/_delete_form.html.twig') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
