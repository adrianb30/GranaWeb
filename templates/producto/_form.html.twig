{{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form.nombre) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.precio) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.stock) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.descripcion) }}
    </div>
    <div class="form-group">
        {{ form_row(form.imagen) }}
    </div>
    <div class="form-group mt-2">
        <button class="btn btn-success form-control">{{ button_label|default('Guardar') }}</button>
    </div>
{{ form_end(form) }}
