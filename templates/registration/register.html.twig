{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
  {% if mensaje %}
      <div class="alert alert-success alert-dismissible fade show mt-3 text-center" role="alert">
          {{ mensaje }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  {% endif %}
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
          
                <h1>Registro</h1>
                {{ form_start(registrationForm) }}
                <div class="form-outline form-white mb-4">
                  <div class="input-group mb-2">
                      <div class="input-group-prepend ">
                          <div class="input-group-text"><i class="fa fa-user text-primary mt-2 mb-2"></i></div>
                      </div>
                      {{ form_widget(registrationForm.nombre) }}
                  </div>  
                </div>
                <div class="form-outline form-white mb-4">
                  <div class="input-group mb-2">
                      <div class="input-group-prepend ">
                          <div class="input-group-text"><i class="fa fa-user-lock text-primary mt-2 mb-2"></i></div>
                      </div>
                    {{ form_widget(registrationForm.apellidos) }}
                  </div> 
                </div>
                <div class="form-outline form-white mb-4">
                    <div class="input-group mb-2">
                      <div class="input-group-prepend ">
                          <div class="input-group-text"><i class="fa fa-id-card text-primary mt-2 mb-2"></i></div>
                      </div>
                      {{ form_widget(registrationForm.dni) }}
                    </div>
                </div>
                <div class="form-outline form-white mb-4">
                  <div class="input-group mb-2">
                        <div class="input-group-prepend ">
                            <div class="input-group-text"><i class="fa fa-envelope text-primary mt-2 mb-2"></i></div>
                        </div>
                      {{ form_widget(registrationForm.email) }}
                    </div>
                </div>
                <div class="form-outline form-white mb-4 ">
                  <div class="input-group mb-2">
                      <div class="input-group-prepend ">
                          <div class="input-group-text"><i class="fa fa-compass text-primary mt-2 mb-2"></i></div>
                      </div>
                      {{ form_widget(registrationForm.direccion) }}
                    </div>
                  </div>
                <div class="form-outline form-white mb-4">
                    <div class="input-group mb-2">
                      <div class="input-group-prepend ">
                          <div class="input-group-text"><i class="fa fa-lock text-primary mt-2 mb-2"></i></div>
                      </div>
                      {{ form_widget(registrationForm.plainPassword) }}
                    </div>
                </div><div class="form-outline form-white mb-4">
                    <div class="input-group mb-2">
                      <div class="input-group-prepend ">
                          <div class="input-group-text"><i class="fa fa-unlock text-primary mt-2 mb-2"></i></div>
                      </div>
                      {{ form_widget(registrationForm.confirmpassword) }}
                    </div>
                </div>
                
                
                <div class="form-outline form-white mb-4 mt-4">
                    <label>Aceptar Terminos y condiciones</label>
                    {{ form_widget(registrationForm.agreeTerms) }}
                </div>    
                <button type="submit" class="btn btn-primary">Registrarse</button>
                {{ form_end(registrationForm) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
