{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <form method="post">
              {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}

              {% if app.user %}
                  <div class="mb-3">
                    Has iniciado sesión como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                  </div>
              {% endif %}
              <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-2 text-uppercase">Iniciar Sesión</h2>
                <p class="text-white-50 mb-5">Introduce tu correo y tu contraseña</p>
                <div class="form-outline form-white mb-4">
                  <input type="email" id="inputEmail" name="email" class="form-control form-control-lg" placeholder="Email" value="{{ last_username }}" />
                </div>
                <div class="form-outline form-white mb-4">
                  <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" placeholder="Contraseña" />
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                </div>
                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">¿Has olvidado la contraseña?</a></p>
                <button class="btn btn-outline-primary btn-lg px-5" type="submit">Iniciar Sesión</button>
                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                  <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                  <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                  <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                </div>
              </div>
              <div>
                <p class="mb-0">¿Quieres crearte una cuenta en GranaWeb? <a href="{{ path('app_register') }}" class="text-white-50 fw-bold">Registrarse</a>
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
