{% extends 'admin/base.html.twig' %}

{% block title %}Edit Pedido{% endblock %}

{% block body %}
<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center ">
    <div class="col-12 col-md-11 col-lg-10 col-xl-9">
      <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center text-white">
            <h1>Editar Pedido | #{{ pedido.id}}</h1>

            {# {{ include('pedido/_form.html.twig') }} #}
            <pre>
                {{ dump(pedido) }}
            </pre>
            <form method="POST">
                <div class="form-group d-flex">
                    <input type="text" class="form-control" name="Cliente" readonly value="{{ pedido.usuario.nombre}}">
                    <input type="hidden" name="cliente_id" value="{{ pedido.usuario.apellidos}}">
                    <input type="text" class="form-control" name="Cliente_apellido" readonly value="{{ pedido.usuario.apellidos}}">
                </div>
                <div class="form-group">
                    <div class="container">
                        <div class="row">
                            <div class="col-8">
                                <label for="" class="form-label">Seleccione el estado:</label>
                                <select class="form-control" name="estado" id="">
                                    <option selected disabled value={{ pedido.estado}}>{{pedido.estado}}</option>
                                    <option value="Pendiente">Pendiente</option>
                                    <option value="Pagado">Pagado</option>
                                    <option value="Preparado">Preparado</option>
                                    <option value="Enviado">Enviado</option>
                                </select>
                            </div>
                            <div class="col-4">
                                <label for="" class="form-label">Seleccione el estado:</label>
                                <input type="text" class="form-control" value="shkshf">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group d-flex">
                    <input  type="text" class="form-control" value="">
                    <input>
                </div>
            </form>
            <a href="{{ path('app_pedido_index') }}">Volver</a>

            {{ include('pedido/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
